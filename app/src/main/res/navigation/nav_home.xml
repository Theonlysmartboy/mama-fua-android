<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="org.tridzen.mamafua.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_applyFragment"
            app:destination="@id/applyFragment" />
        <action
            android:id="@+id/action_homeFragment_to_getActivity"
            app:destination="@id/getActivity" />

        <action
            android:id="@+id/action_homeFragment_to_loyaltyActivity"
            app:destination="@id/loyaltyActivity" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/applyFragment"
        android:name="org.tridzen.mamafua.ui.home.launcher.apply.ApplyFragment"
        android:label="fragment_apply"
        tools:layout="@layout/fragment_apply" />

    <activity
        android:id="@+id/getActivity"
        android:name="org.tridzen.mamafua.ui.home.launcher.get.GetActivity"
        android:label="GetActivity" />
    <activity
        android:id="@+id/loyaltyActivity"
        android:name="org.tridzen.mamafua.ui.home.launcher.history.LoyaltyActivity"
        android:label="LoyaltyActivity" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="org.tridzen.mamafua.ui.home.launcher.settings.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>